@model SchoolProject.Models.SchoolEntities

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
<h1>Edit</h1>

<h4>SchoolEntities</h4>
<hr />
        <br />
        @{
            if (@ViewBag.success != null)
            {
                <div id="AlertBox" class="alert alert-success" role="alert">
                    @ViewBag.success
                </div>
            }
        }
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SchoolName" class="control-label"></label>
                <input asp-for="SchoolName" class="form-control" />
                <span asp-validation-for="SchoolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoundedTime" class="control-label"></label>
                <input  asp-for="FoundedTime" class="form-control" />
                <span asp-validation-for="FoundedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">
                    <input type="button" value="Back to List" class="btn btn-secondary" />
                </a>
            </div>
        </form>
                <br />
        @{
            if (@ViewBag.error != null)
            {
                <div id="AlertBox" class="alert alert-danger" role="alert">
                    @ViewBag.error
                </div>
            }
        }
    </div>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
        $(function() {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });

    </script>
    }
