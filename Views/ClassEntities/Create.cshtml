@model SchoolProject.Dto.Class.CreateOrEditClassDto

@{
    ViewData["Title"] = "Create";
}
<div class="container">
<h1>Create</h1>

<h4>ClassEntities</h4>
<hr />
        <br />
        @{
            if (@ViewBag.success != null)
            {
                <div id="AlertBox" class="alert alert-success" role="alert">
                    @ViewBag.success
                </div>
            }
        }
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassEntities.ClassName" class="control-label"></label>
                <input asp-for="ClassEntities.ClassName" class="form-control" />
                <span asp-validation-for="ClassEntities.ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassEntities.Capacity" class="control-label"></label>
                <input asp-for="ClassEntities.Capacity" class="form-control" />
                <span asp-validation-for="ClassEntities.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <div class="col-lg-15">
                    <label>School</label>
                    @Html.DropDownListFor(model => model.ClassEntities.SchoolId, Model.SchoolList, "--Select School--", new { @class = "form-control" })
                    <span asp-validation-for="ClassEntities.SchoolId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label>Department</label>
                <div class="col-lg-15">
                    @Html.DropDownListFor(model => model.ClassEntities.DepartmentId, Model.DepartmentList, "--Select Department--", new { @class = "form-control"})
                </div>
            </div>
                        <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
                        <br />
        @{
            if (@ViewBag.error != null)
            {
                <div id="AlertBox" class="alert alert-danger" role="alert">
                    @ViewBag.error
                </div>
            }
        }
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary" >Back to List</a>
</div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        <script>
        $(function() {
            $('#AlertBox').removeClass('hide');
            $('#AlertBox').delay(2000).slideUp(500);
        });

    </script>
    }